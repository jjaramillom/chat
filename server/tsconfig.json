{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["ES2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"types/**/*d.ts",
		"drizzle.config.ts"
	],
	"files": ["types/global.d.ts", "drizzle.config.ts", "**/*.ts", "**/*.tsx"]
}
