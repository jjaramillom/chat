{
  "name": "chat",
  "version": "0",
  "description": "Multi-platform chat application",
  "private": true,
  "workspaces": {
    "packages": [
      "app",
      "client",
      "server"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@rneui",
      "**/@rneui/**"
    ]
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=1.22",
    "npm": "use-yarn-instead"
  },
  "scripts": {
    "ui": "yarn workspace client",
    "server": "yarn workspace server",
    "scan:vulnerabilities": "audit-ci --moderate --skip-dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^12.3.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript": "^5.7.2",
    "utility-types": "^3.11.0"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "app/src/**/*.{ts,tsx}": "eslint --fix",
    "app/src/**/*.*": "prettier --write",
    "chat/src/**/*.{ts,tsx}": "eslint --fix",
    "chat/src/**/*.*": "prettier --write",
    "backend/src/**/*.{ts,tsx}": "eslint --fix",
    "backend/src/**/*.*": "prettier --write"
  }
}
